{
  "version": 2,
  "builds": [
    { "src": "client", "use": "@vercel/static" },
    { "src": "server", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/$1" },
    {
      "src": "/(.*)",
      "dest": "client/public/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    }
  ]
}